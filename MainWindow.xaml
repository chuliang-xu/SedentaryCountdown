<Window x:Class="SedentaryCountdown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SedentaryCountdown"
        mc:Ignorable="d" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStyle="None" Topmost="True" AllowsTransparency="True" Background="#01ffffff" ShowInTaskbar="False"
        Title="久坐倒计时" Height="80" Width="200">
    <Window.ContextMenu>
        <ContextMenu Name="contextMenu">
            <MenuItem Header="重置" Click="MenuItemReset_Click"/>
            <MenuItem Header="加快" Click="MenuItemFaster_Click"/>
            <MenuItem Header="延长" Click="MenuItemSlower_Click"/>
            <Separator/>
            <MenuItem Header="设置" Click="MenuItemConfig_Click"/>
            <MenuItem Header="关闭" Click="MenuItemClose_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <TextBlock x:Name="TxtCountdown" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Foreground="#40ff00ff" Text="00:00:00"/>
     </Grid>
</Window>

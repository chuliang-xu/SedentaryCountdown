<Window x:Class="SedentaryCountdown.RestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SedentaryCountdown"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" MouseDoubleClick="Window_MouseDoubleClick"
        WindowStyle="None" Topmost="True" AllowsTransparency="True" Background="#01ffffff" ShowInTaskbar="False"
        Title="RestWindow" Height="500" Width="1920">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="160" Foreground="Fuchsia" Text = "休息一下，不然会挂"/>
        <TextBlock x:Name="TxtCountdown" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="120" Foreground="#40ff00ff" Text="00:00:00"/>
    </StackPanel>
</Window>
